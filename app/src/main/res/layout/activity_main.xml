<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15152F"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_tick"
            android:layout_centerInParent="true"
            android:layout_width="94dp"
            android:layout_height="94dp"
            app:srcCompat="@drawable/ic_tick"
            />

        <ImageView
            android:id="@+id/img_tick_back"
            android:layout_centerInParent="true"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:elevation="-1dp"
            app:srcCompat="@drawable/ic_tick_back"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_tick_back"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQLite"
                android:textColor="@color/colorGreen1"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_margin="2sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRUD"
                android:textColor="@color/colorFontPrimary3"
                android:layout_marginTop="4dp"
                android:layout_margin="2sp"
                android:textSize="13sp"
                android:gravity="center_horizontal" />

        </LinearLayout>




<!--        <LinearLayout-->
<!--            android:id="@+id/ll_cover"-->
<!--            android:layout_height="64dp"-->
<!--            android:layout_width="64dp"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:background="#15152F"-->
<!--          android:orientation="vertical" >-->

<!--        </LinearLayout>-->
    </RelativeLayout>



    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edt_name_back"
        android:gravity="center"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorFontPrimary3"
        android:textColorHint="@color/colorHint"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt_city"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edt_name_back"
        android:gravity="center"
        android:hint="Enter your City"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorFontPrimary3"
        android:textColorHint="@color/colorHint"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edt_name_back"
        android:gravity="center"
        android:hint="Enter your age"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorFontPrimary3"
        android:textColorHint="@color/colorHint"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:lines="2"
        android:fontFamily="@font/font"
        android:padding="16dp"
        android:text="برای تغییر عکس کاربری خود از میان لیست پیش فرض انتخاب نمایید، جهت تغییر پس از ورود به پروفایل کاربری امکان ویرایش وجود دارد."
        android:textAlignment="center"
        android:textColor="#667158"
        android:textSize="11sp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_save_back"
        android:text="save"
        android:textColor="#667158"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_show_back"
        android:text="show"
        android:textColor="#667158"
        android:textSize="14sp" />


</LinearLayout>
