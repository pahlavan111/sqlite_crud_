        <Button
            android:id="@+id/btn_del"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_below="@+id/img_prof"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_delete_back"
            android:text="delet"
            android:textColor="@color/colorFontPrimary3"
            android:textSize="9sp" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_below="@+id/img_prof"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@id/btn_del"
            android:layout_toLeftOf="@id/btn_del"
            android:background="@drawable/btn_edit_back"
            android:text="edit"
            android:textColor="@color/colorFontPrimary4"
            android:textSize="9sp" />


    </RelativeLayout>

</LinearLayout>

